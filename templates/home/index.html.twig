{% extends 'base.html.twig' %}

{% block title %}HomePage{% endblock %}

{% block body %}

{# recuparation in bdd #}
{# header #}
{% for header in headers %}
<div class="headband-container">
    <img class="headband" src="{{ asset('img/' ~ header.headBand) }}" alt="Header Image">
</div> 
{% endfor %} 

{# General Presensation #}
{% for presentationItem in presentation %}

 <div class="containter-presentation" > 
    
    <img src="{{ asset('img/' ~ presentationItem.img) }}" alt="Image" class="presentation-image">
    
    <div class="container-text">
        <h1 class="presention-title">{{ presentationItem.title }}</h1> 
        <p class="presentation-txt">{{ presentationItem.TXT }}</p>
    </div>
</div>
{# <div>{{ presentationItem.page }}</div> #}
{% endfor %}
 
{# Presensation Entreprise #}

{% for entrepriseItem in entreprise %}

<div class="container-entreprise">
    <div class="entreprise-content">
        <h1 class="entreprise-title">{{ entrepriseItem.title }}</h1> 
        <p class="entreprise-txt">{{ entrepriseItem.description }}</p>
    </div>
</div>
        
{% endfor %}
 
{# Map/En Pratique #}
<div class="container-pratique">
    <div class="content-pratique">
        <div class="map">
        <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d85247.41641510064!2d-1.2796263419593952!3d48.11058752037116!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x48092861650877b5%3A0x40ca5cd36e4a3d0!2s35500%20Vitr%C3%A9!5e0!3m2!1sfr!2sfr!4v1715767335897!5m2!1sfr!2sfr" width="400" height="300" style="border:0;" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe>
        </div>
        <div class="pratique-text">
            <h2 class="title-pratique">En Pratique</h2>
            <p class="txt-pratique">It is a long established fact that a reader will be distracted by the readable content of a page when looking at its layout.</p>
        </div>
    </div>
</div>
